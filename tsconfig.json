{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "declarationMap": true,
    "importHelpers": false,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "index.ts",
    "src/**/*",
    "tests/sdk.test.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}